<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_note"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:src="@drawable/item_note" />

    <ImageView
        android:id="@+id/iv_item_note_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_x="108dp"
        android:layout_y="10dp"
        android:src="@drawable/star_note" />

    <TextView
        android:id="@+id/tv_item_note_content"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_x="30dp"
        android:layout_y="35dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:text="content" />

    <TextView
        android:id="@+id/tv_item_note_time"
        android:layout_width="77dp"
        android:layout_height="40dp"
        android:layout_x="30dp"
        android:layout_y="95dp"
        android:text="YYYY/MM/DD" />

    <ImageView
        android:id="@+id/iv_item_note_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_x="110dp"
        android:layout_y="100dp"
        android:src="@drawable/delete_note" />

</AbsoluteLayout>