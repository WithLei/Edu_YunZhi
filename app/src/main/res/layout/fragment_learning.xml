<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/lv_learning_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp">

        <RadioGroup
            android:id="@+id/btn_change"
            android:layout_width="140dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:checkedButton="@+id/btn_1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.android.renly.edu_yunzhi.UI.BatchRadioButton
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/switch_left_bg"
                android:button="@null"
                android:gravity="center"
                android:text="回复"
                android:textColor="@color/text_primary_white"
                android:textSize="13sp" />

            <com.android.renly.edu_yunzhi.UI.BatchRadioButton
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/switch_center_bg"
                android:button="@null"
                android:gravity="center"
                android:text="消息"
                android:textColor="@color/text_primary_white"
                android:textSize="13sp" />

            <com.android.renly.edu_yunzhi.UI.BatchRadioButton
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/switch_right_bg"
                android:button="@null"
                android:gravity="center"
                android:text="提到"
                android:textColor="@color/text_primary_white"
                android:textSize="13sp" />
        </RadioGroup>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_learning"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

</LinearLayout>