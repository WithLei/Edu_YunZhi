<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:text="title"/>

        <ImageView
            android:id="@+id/iv_news_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/user2"/>

        <TextView
            android:id="@+id/tv_item_content"
            android:layout_marginTop="10dp"
            android:textColor="#222222"
            android:textSize="15sp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_title"
            android:text="content"/>


        <TextView
            android:id="@+id/tv_item_commentCount"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="commentCount" />

        <TextView
            android:id="@+id/tv_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_item_commentCount"
            android:layout_alignBaseline="@id/tv_item_commentCount"
            android:text=" 评论 ·" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_item_comment"
            android:layout_alignBaseline="@id/tv_item_comment"
            android:text="name" />

        <TextView
            android:id="@+id/tv_item_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_item_name"
            android:layout_alignBaseline="@id/tv_item_name"
            android:text=" · "/>

        <TextView
            android:id="@+id/tv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_item_left"
            android:layout_alignBaseline="@id/tv_item_left"
            android:text="time"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_item_time"
            android:layout_alignBaseline="@id/tv_item_time"
            android:text=" 天前"/>

        <Button
            android:id="@+id/btn_item_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/tv_item_time"
            android:background="@drawable/code"
            android:minHeight="0dp"
            android:minWidth="0dp"/>

        <View
            android:layout_below="@id/tv_item_commentCount"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"/>

    </RelativeLayout>

</LinearLayout>

