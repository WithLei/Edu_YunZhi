<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:YunZhi="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp">
        <com.android.renly.edu_yunzhi.UI.CircleImageView
            android:id="@+id/ci_addclass_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:src="@drawable/back"
            YunZhi:civ_border_color="@color/white"
            YunZhi:civ_border_width="1dp" />
        <TextView
            android:id="@+id/tv_addclass_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxEms="10"
            android:text="添加课程"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_addclass_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textSize="20dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:textColor="@color/summerGreen"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程编号"
            android:textColor="@color/text_color_pri"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_addclass_classid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="90sp"
            android:inputType="number"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程名"
            android:textColor="@color/text_color_pri"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_addclass_classname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="90sp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程介绍"
            android:textColor="@color/text_color_pri"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/et_addclass_classdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="90sp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="课程图标"
            android:textColor="@color/text_color_pri"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/iv_addclass_classiv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/image_placeholder"
            android:layout_gravity="center_vertical|right"
            android:padding="10dp"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_addclass_takephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍照选择"
            android:padding="10dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="110dp"/>
        <Button
            android:id="@+id/btn_addclass_fromlocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="从本地选择"
            android:layout_gravity="center_vertical|right"
            android:padding="10dp"
            android:layout_marginRight="10dp"/>
    </FrameLayout>

</LinearLayout>
